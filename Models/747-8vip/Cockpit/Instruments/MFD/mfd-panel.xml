<?xml version="1.0"?>
<PropertyList>

<name>MFD Panel</name>
<background>Aircraft/VIP/Models/747-8vip/Cockpit/Instruments/PFD/transparent.png</background>
<w>256</w>
<h>256</h>

<instruments>

    <instrument include="APP.xml">
        <condition>
            <and>
                <greater-than>
                    <property>systems/electrical/outputs/efis</property>
                    <value>15</value>
                </greater-than>
                <equals>
                    <property>instrumentation/efis/mfd/display-mode</property>
                    <value>APP</value>
                </equals>
            </and>
        </condition>
        <name>app</name>
        <x>128</x>
        <y>128</y>
        <w>256</w>
        <h>256</h>
    </instrument>

