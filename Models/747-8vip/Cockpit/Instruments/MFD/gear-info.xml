<?xml version="1.0"?>


<PropertyList>
    <name>gear-info</name>
    <w-base>364</w-base>
    <h-base>400</h-base>

    <layers>
        <layer>
            <name>gear</name>
            <emissive>true</emissive>
            <w>364</w>
            <h>400</h>
            <texture>
                <path>Aircraft/VIP/Models/747-8vip/Cockpit/Instruments/MFD/gear.png</path>
                <x1>0.0</x1>
                <y1>0.0</y1>
                <x2>1.0</x2>
                <y2>1.0</y2>
            </texture>		
        </layer>
	
        <layer>
            <name>gear_val0</name>
            <emissive>true</emissive>
            <w>364</w>
            <h>400</h>
			<condition>
                <greater-than>
                    <property>/gear/gear[2]/position-norm</property>
                    <value>0</value>
                </greater-than>
                <less-than>
                    <property>/gear/gear[2]/position-norm</property>
                    <value>1</value>
                </less-than>
			</condition>
			 
            <texture>
                <path>Aircraft/VIP/Models/747-8vip/Cockpit/Instruments/MFD/gear_down.png</path>
                <x1>0.0</x1>
                <y1>0.0</y1>
                <x2>1.0</x2>
                <y2>1.0</y2>
            </texture>		
          </layer>		
             
          <layer>
            <name>gear_val1</name>
            <emissive>true</emissive>
            <w>364</w>
            <h>400</h>
			
	      <condition>
                <equals>
                    <property>/gear/gear[2]/position-norm</property>
                    <value>1</value>
                </equals>
                <less-than>
                   	<property>/gear/brake-thermal-energy</property>
                    	<value>0.25</value>
                </less-than>
               </condition>

            <texture>
                <path>Aircraft/VIP/Models/747-8vip/Cockpit/Instruments/MFD/gear_blocked.png</path>
                <x1>0.0</x1>
                <y1>0.0</y1>
                <x2>1.0</x2>
                <y2>1.0</y2>
            </texture>		
          </layer>

          <layer>
            <name>gear_val2</name>
            <emissive>true</emissive>
            <w>364</w>
            <h>400</h>
			
		<condition>
                	<equals>
                   		<property>/gear/gear[2]/position-norm</property>
                    		<value>1</value>
                 	</equals>
  			<greater-than>
                    		<property>/gear/brake-thermal-energy</property>
                    		<value>0.25</value>
                	</greater-than>
                		<less-than>
                   		 <property>/gear/brake-thermal-energy</property>
                    		<value>1.09</value>
                		</less-than>
              	</condition>
            <texture>
                <path>Aircraft/VIP/Models/747-8vip/Cockpit/Instruments/MFD/gear_ground.png</path>
                <x1>0.0</x1>
                <y1>0.0</y1>
                <x2>1.0</x2>
                <y2>1.0</y2>
            </texture>		
          </layer>		
	   
	<layer>
            <name>gear_val3</name>
            <emissive>true</emissive>
            <w>364</w>
            <h>400</h>
			
		<condition>
       			<equals>
                   		<property>/gear/gear[2]/position-norm</property>
                    		<value>1</value>
                 	</equals>          	
			<greater-than>
                    		<property>/gear/brake-thermal-energy</property>
                    		<value>1.1</value>
               		</greater-than>
		</condition>
            
		<texture>
                <path>Aircraft/VIP/Models/747-8vip/Cockpit/Instruments/MFD/gear_overht.png</path>
                <x1>0.0</x1>
                <y1>0.0</y1>
                <x2>1.0</x2>
                <y2>1.0</y2>
            </texture>		
          </layer>	       
	
	</layers>
	
</PropertyList>
