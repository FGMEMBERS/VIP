<?xml version="1.0"?>


<PropertyList>
    <name>doors-info</name>
    <w-base>364</w-base>
    <h-base>400</h-base>

    <layers>
        <layer>
            <name>doors</name>
            <emissive>true</emissive>
            <w>364</w>
            <h>400</h>
            <texture>
                <path>Aircraft/VIP/Models/747-8vip/Cockpit/Instruments/MFD/doors.png</path>
                <x1>0.0</x1>
                <y1>0.0</y1>
                <x2>1.0</x2>
                <y2>1.0</y2>
            </texture>		
        </layer>
        <layer>
            <name>doors_val0</name>
            <emissive>true</emissive>
            <w>364</w>
            <h>400</h>
			<condition>
				<equals>
                    <property>/controls/fuel/tank/boost-pump</property>
                    <value>0</value>
				</equals>
				<equals>
					<property>/controls/fuel/tank[1]/boost-pump</property>
                    <value>0</value>
				</equals>
				<equals>
					<property>/controls/fuel/tank[2]/boost-pump</property>
                    <value>0</value>
				</equals>	
				
				<property>/gear/gear[0]/wow</property>
				<property>/gear/gear[2]/wow</property>
				
				<less-than>
					<property>/velocities/groundspeed-kt</property>
                    <value>0.02</value>
				</less-than>
			</condition>
            <texture>
                <path>Aircraft/VIP/Models/747-8vip/Cockpit/Instruments/MFD/doors_op1.png</path>
                <x1>0.0</x1>
                <y1>0.0</y1>
                <x2>1.0</x2>
                <y2>1.0</y2>
            </texture>		
          </layer>		
             
	</layers>
	
</PropertyList>
